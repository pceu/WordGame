<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical"
    tools:context=".LevelThreeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/timer_level_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:text="0:00"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/coinButtonL3"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginStart="180dp"
            android:background="@drawable/coin_box_shape"
            android:drawableStart="@drawable/coin_icon"
            android:layout_gravity="center"
            android:text="10"
            android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="550dp"
        android:layout_height="100dp"
        android:background="@drawable/question_box"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/l3qBoard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/l3HintButton"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="50dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/hint_button" />

        <Button
            android:id="@+id/l3AnswerBtn1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/no_shadow_answer_btn"
            android:layout_marginEnd="3dp"
            android:textSize="38sp"/>
        <Button
            android:id="@+id/l3AnswerBtn2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/no_shadow_answer_btn"
            android:layout_marginEnd="3dp"
            android:textSize="38sp"/>
        <Button
            android:id="@+id/l3AnswerBtn3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/no_shadow_answer_btn"
            android:layout_marginEnd="3dp"
            android:textSize="38sp"/>
        <Button
            android:id="@+id/l3AnswerBtn4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/no_shadow_answer_btn"
            android:layout_marginEnd="3dp"
            android:textSize="38sp"/>
        <Button
            android:id="@+id/l3AnswerBtn5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/no_shadow_answer_btn"
            android:layout_marginEnd="3dp"
            android:textSize="38sp"/>

        <Button
            android:id="@+id/l3AnswerBtn6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/no_shadow_answer_btn"
            android:layout_marginEnd="3dp"
            android:textSize="38sp"/>
        <Button
            android:id="@+id/l3AnswerBtn7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/no_shadow_answer_btn"
            android:textSize="38sp"/>

        <Button
            android:id="@+id/l3SkipButton"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="2dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/skip_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/l3GivenWordBtn1"
            android:background="@drawable/word_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="3dp"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/l3GivenWordBtn2"
            android:background="@drawable/word_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="3dp"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/l3GivenWordBtn3"
            android:background="@drawable/word_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="3dp"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/l3GivenWordBtn4"
            android:background="@drawable/word_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="3dp"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/l3GivenWordBtn5"
            android:background="@drawable/word_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="3dp"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/l3GivenWordBtn6"
            android:background="@drawable/word_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textSize="35sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/answerLayout2"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="0dp">

        <Button
            android:id="@+id/l3GivenWordBtn7"
            android:background="@drawable/word_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="3dp"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/l3GivenWordBtn8"
            android:background="@drawable/word_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="3dp"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/l3GivenWordBtn9"
            android:background="@drawable/word_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="3dp"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/l3GivenWordBtn10"
            android:background="@drawable/word_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="3dp"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/l3GivenWordBtn11"
            android:background="@drawable/word_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="3dp"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/l3GivenWordBtn12"
            android:background="@drawable/word_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textSize="35sp"/>

    </LinearLayout>

</LinearLayout>