<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical"
    tools:context=".LevelTwoActivity">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="180dp"
        android:background="@drawable/question_box"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="60dp">

        <TextView
            android:id="@+id/level2Question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:text="This is a test question for the level!"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/no_shadow_answer_btn"
            android:layout_marginEnd="45dp"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/no_shadow_answer_btn" />




    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="2dp">

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/no_shadow_answer_btn"
            android:layout_marginEnd="45dp"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/no_shadow_answer_btn"
            android:layout_marginEnd="45dp"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/no_shadow_answer_btn" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/answerLayout1"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="70dp">
        <Button
            android:id="@+id/l2WordButton1"
            android:background="@drawable/word_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="10dp"/>
        <Button
            android:id="@+id/l2WordButton2"
            android:background="@drawable/word_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="10dp"/>
        <Button
            android:id="@+id/l2WordButton3"
            android:background="@drawable/word_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="10dp"/>
        <Button
            android:id="@+id/l2WordButton4"
            android:background="@drawable/word_button"
            android:layout_width="85dp"
            android:layout_height="85dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/answerLayout2"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="0dp">
        <Button
            android:id="@+id/l2WordButton5"
            android:background="@drawable/word_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="10dp"/>
        <Button
            android:id="@+id/l2WordButton6"
            android:background="@drawable/word_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="10dp"/>
        <Button
            android:id="@+id/l2WordButton7"
            android:background="@drawable/word_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="10dp"/>
        <Button
            android:id="@+id/l2WordButton8"
            android:background="@drawable/word_button"
            android:layout_width="90dp"
            android:layout_height="90dp" />

    </LinearLayout>
</LinearLayout>