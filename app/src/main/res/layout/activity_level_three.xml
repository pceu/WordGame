<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical"
    tools:context=".LevelThreeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/coin"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="240dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/coin_box_shape"
            android:text="10"
            android:textSize="24dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="160dp"
        android:background="@drawable/question_box"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/l3qBoard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/l3AnswerBtn1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/no_shadow_answer_btn"
            android:layout_marginEnd="3dp"
            android:textSize="38sp"/>
        <Button
            android:id="@+id/l3AnswerBtn2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/no_shadow_answer_btn"
            android:layout_marginEnd="3dp"
            android:textSize="38sp"/>
        <Button
            android:id="@+id/l3AnswerBtn3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/no_shadow_answer_btn"
            android:layout_marginEnd="3dp"
            android:textSize="38sp"/>
        <Button
            android:id="@+id/l3AnswerBtn4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/no_shadow_answer_btn"
            android:layout_marginEnd="3dp"
            android:textSize="38sp"/>
        <Button
            android:id="@+id/l3AnswerBtn5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/no_shadow_answer_btn"
            android:layout_marginEnd="3dp"
            android:textSize="38sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="7dp">

        <Button
            android:id="@+id/l3AnswerBtn6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/no_shadow_answer_btn"
            android:layout_marginEnd="3dp"
            android:textSize="38sp"/>
        <Button
            android:id="@+id/l3AnswerBtn7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/no_shadow_answer_btn"
            android:textSize="38sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_gravity="end">
        <Button
            android:id="@+id/l3HintButton"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/hint_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">
        <Button
            android:id="@+id/l3GivenWordBtn1"
            android:background="@drawable/word_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="3dp"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/l3GivenWordBtn2"
            android:background="@drawable/word_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="3dp"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/l3GivenWordBtn3"
            android:background="@drawable/word_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="3dp"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/l3GivenWordBtn4"
            android:background="@drawable/word_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="3dp"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/l3GivenWordBtn5"
            android:background="@drawable/word_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="3dp"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/l3GivenWordBtn6"
            android:background="@drawable/word_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textSize="35sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/answerLayout2"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="0dp">

        <Button
            android:id="@+id/l3GivenWordBtn7"
            android:background="@drawable/word_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="3dp"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/l3GivenWordBtn8"
            android:background="@drawable/word_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="3dp"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/l3GivenWordBtn9"
            android:background="@drawable/word_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="3dp"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/l3GivenWordBtn10"
            android:background="@drawable/word_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="3dp"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/l3GivenWordBtn11"
            android:background="@drawable/word_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="3dp"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/l3GivenWordBtn12"
            android:background="@drawable/word_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textSize="35sp"/>

    </LinearLayout>

</LinearLayout>